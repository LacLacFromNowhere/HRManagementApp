<UserControl x:Class="HRManagementApp.EmployeeManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Reuse the same color scheme -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2E86AB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#A23B72"/>
        <SolidColorBrush x:Key="AccentColor" Color="#F18F01"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="CardColor" Color="White"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#7F8C8D"/>

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E5E5"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2574A9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" BasedOn="{StaticResource PrimaryButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Header Section -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Employee Management" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Manage employee information, roles, and organizational structure" 
                               FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ“¤ Export" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="+ Add Employee" Style="{StaticResource PrimaryButtonStyle}" Name="AddEmployeeBtn"/>
                </StackPanel>
            </Grid>

            <!-- Statistics Cards -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Active Employees -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel Margin="20">
                        <TextBlock Text="Active Employees" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="247" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,5,0,0"/>
                        <TextBlock Text="â†— 5% from last month" FontSize="10" Foreground="#27AE60" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- New Hires -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0">
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="New Hires (This Month)" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="12" FontSize="28" FontWeight="Bold" Foreground="#27AE60" Margin="0,5,0,0"/>
                        <TextBlock Text="8 onboarding" FontSize="10" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Departments -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0">
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Departments" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="8" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentColor}" Margin="0,5,0,0"/>
                        <TextBlock Text="All active" FontSize="10" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Avg Tenure -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Avg Tenure" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="3.2 yrs" FontSize="28" FontWeight="Bold" Foreground="{StaticResource SecondaryColor}" Margin="0,5,0,0"/>
                        <TextBlock Text="Industry standard" FontSize="10" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Filters and Search -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Filter &apm; Search" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <TextBox Grid.Column="0" Name="SearchTextBox" 
                                 Padding="10" FontSize="14" Margin="0,0,10,0"
                                 BorderBrush="#E5E5E5" BorderThickness="1"
                                 Text="Search employees...">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Department Filter -->
                        <ComboBox Grid.Column="1" Name="DepartmentFilter" Margin="5,0" Padding="10"
                                  BorderBrush="#E5E5E5" BorderThickness="1">
                            <ComboBoxItem Content="All Departments" IsSelected="True"/>
                            <ComboBoxItem Content="IT"/>
                            <ComboBoxItem Content="HR"/>
                            <ComboBoxItem Content="Marketing"/>
                            <ComboBoxItem Content="Finance"/>
                            <ComboBoxItem Content="Operations"/>
                        </ComboBox>

                        <!-- Status Filter -->
                        <ComboBox Grid.Column="2" Name="StatusFilter" Margin="5,0" Padding="10"
                                  BorderBrush="#E5E5E5" BorderThickness="1">
                            <ComboBoxItem Content="All Status" IsSelected="True"/>
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Inactive"/>
                            <ComboBoxItem Content="On Leave"/>
                        </ComboBox>

                        <!-- Position Filter -->
                        <ComboBox Grid.Column="3" Name="PositionFilter" Margin="5,0" Padding="10"
                                  BorderBrush="#E5E5E5" BorderThickness="1">
                            <ComboBoxItem Content="All Positions" IsSelected="True"/>
                            <ComboBoxItem Content="Manager"/>
                            <ComboBoxItem Content="Senior"/>
                            <ComboBoxItem Content="Junior"/>
                            <ComboBoxItem Content="Intern"/>
                        </ComboBox>

                        <!-- Search Button -->
                        <Button Grid.Column="4" Content="ðŸ” Search" Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="10,0,0,0" Name="SearchBtn"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Employee List -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Margin="0,0,0,10">
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="Employee Directory" FontSize="16" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="247 employees" VerticalAlignment="Center" 
                                       Foreground="{StaticResource TextSecondary}" Margin="0,0,15,0"/>
                            <Button Content="â‹®" Style="{StaticResource SecondaryButtonStyle}" 
                                    Padding="8" FontSize="16" Name="MoreOptionsBtn"/>
                        </StackPanel>
                    </Grid>
                    
                    <DataGrid Name="EmployeeDataGrid" Style="{StaticResource DataGridStyle}" 
                              MinHeight="400" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTemplateColumn Header="Employee" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Ellipse Width="32" Height="32" Fill="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FullName}" FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Email}" FontSize="11" 
                                                           Foreground="{StaticResource TextSecondary}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="120"/>
                            <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="150"/>
                            <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate, StringFormat=MM/dd/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Salary" Binding="{Binding Salary, StringFormat=C}" Width="100"/>
                            <DataGridTemplateColumn Header="Status" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#D5EDDA" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Status}" FontSize="10" 
                                                       Foreground="#155724" FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="ðŸ‘" ToolTip="View" Style="{StaticResource SecondaryButtonStyle}" 
                                                    Padding="5" Margin="2" FontSize="10"/>
                                            <Button Content="âœ" ToolTip="Edit" Style="{StaticResource PrimaryButtonStyle}" 
                                                    Padding="5" Margin="2" FontSize="10"/>
                                            <Button Content="ðŸ—‘" ToolTip="Delete" 
                                                    Background="#E74C3C" Foreground="White" BorderThickness="0"
                                                    Padding="5" Margin="2" FontSize="10"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination -->
                    <Grid Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="Showing 1-20 of 247 employees" VerticalAlignment="Center" 
                                       Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="â† Previous" Style="{StaticResource SecondaryButtonStyle}" 
                                    Margin="0,0,5,0" IsEnabled="False"/>
                            <Button Content="1" Style="{StaticResource PrimaryButtonStyle}" Margin="2,0"/>
                            <Button Content="2" Style="{StaticResource SecondaryButtonStyle}" Margin="2,0"/>
                            <Button Content="3" Style="{StaticResource SecondaryButtonStyle}" Margin="2,0"/>
                            <TextBlock Text="..." VerticalAlignment="Center" Margin="5,0"/>
                            <Button Content="13" Style="{StaticResource SecondaryButtonStyle}" Margin="2,0"/>
                            <Button Content="Next â†’" Style="{StaticResource SecondaryButtonStyle}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>